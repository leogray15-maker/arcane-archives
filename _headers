# Arcane Archives Security Headers
# These headers protect against common web vulnerabilities while allowing TradingView, Stripe, Firebase, and other services

/*
  # Prevent clickjacking attacks
  X-Frame-Options: SAMEORIGIN

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # XSS Protection (legacy browsers)
  X-XSS-Protection: 1; mode=block

  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin

  # Force HTTPS for 1 year
  Strict-Transport-Security: max-age=31536000; includeSubDomains

  # Permissions Policy - disable unnecessary features
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(self "https://js.stripe.com")

  # Content Security Policy - Allow TradingView, Stripe, Firebase, Calendly, Chart.js
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://s3.tradingview.com https://widgets.tradingview-widget.com https://s.tradingview.com https://www.gstatic.com https://*.firebaseio.com https://js.stripe.com https://assets.calendly.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://assets.calendly.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: https: http:; frame-src 'self' https://s.tradingview.com https://www.tradingview.com https://*.firebaseapp.com https://js.stripe.com https://calendly.com https://hooks.stripe.com; connect-src 'self' https://*.googleapis.com https://*.firebaseio.com https://*.firebaseapp.com https://*.firebasestorage.app wss://*.firebaseio.com https://api.stripe.com https://firestore.googleapis.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com; object-src 'none'; base-uri 'self'; form-action 'self' https://checkout.stripe.com;

# Cache static assets
/*.css
  Cache-Control: public, max-age=31536000

/*.js
  Cache-Control: public, max-age=31536000

/*.png
  Cache-Control: public, max-age=31536000

/*.jpg
  Cache-Control: public, max-age=31536000

/*.ico
  Cache-Control: public, max-age=31536000

# Don't cache HTML (always fresh)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
